{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "strict": true,
        "noEmit": false,
        "outDir": "./dist",
        "declaration": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}