{
    "name": "@raffaelecarelle/shopware-acceptance-fixture-loader",
    "version": "1.0.0",
    "description": "A TypeScript library for Shopware to create test data in Playwright using YAML fixtures",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.js",
    "files": [
        "dist/**/*",
        "README.md"
    ],
    "scripts": {
        "build": "tsc",
        "prepublishOnly": "npm run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "shopware",
        "playwright",
        "testing",
        "fixtures",
        "yaml",
        "test-data",
        "e2e"
    ],
    "author": "Raffaele Carelle",
    "license": "ISC",
    "devDependencies": {
        "@faker-js/faker": "^9.9.0",
        "@playwright/test": "^1.55.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.5.2",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "dotenv": "^17.2.2",
        "eslint": "^9.36.0",
        "eslint-plugin-playwright": "^2.2.2",
        "jest": "^30.1.3",
        "ts-jest": "^29.1.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@shopware-ag/acceptance-test-suite": "^11.30.0",
        "@shopware/api-client": "^1.3.0",
        "@types/js-yaml": "^4.0.9",
        "js-yaml": "^4.1.0"
    }
}
